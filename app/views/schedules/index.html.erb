<body class="content-wrapper">
	<h1 class="post-title">All Schedules</h1>

	<div class="row">
		<div class="col-md-9 events-wrapper">
		<ul>
			<% @schedules.each do |schedule| %>
				<li> <%= link_to 'Week ' + schedule.week.to_s, schedule_path(schedule.id) %> </li>
			<% end %>
		</ul>
		</div>

		<div class="col-md-2">
			<% if current_user.admin? %>
			<%= link_to "Create a new schedule", new_schedule_path, class: "btn btn-default" %>
			<% else %>
			<% end %>
		</div>
	</div>
</body>