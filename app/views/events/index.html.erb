<body class="content-wrapper">
	<h1 class="post-title">All Events</h1>

	<div class="row">
	<div class="col-md-5 events-wrapper">
			<h3>Upcoming events:</h3>
			<% @pending_events.each do |event| %>
			<p>
				<%= link_to event.name, event_path(event.id) %>
			</p>
			<% end %>
		</div>

		<div class="col-md-5 events-wrapper">
			<h3>Past events:</h3>
			<% @past_events.each do |event| %>
			<p>
				<%= link_to event.name, event_path(event.id) %>
			</p>
			<% end %>
		</div>


		<div class="col-md-1">
			<% if current_user.admin? %>
			<%= link_to "Add a new event", new_event_path, class: "btn btn-default" %>
			<% else %>
			<% end %>
		</div>
	</div>
</body>