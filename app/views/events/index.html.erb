<h1>All Events</h1>

<% if current_user.admin? %>
	<%= link_to "Add a new event", new_event_path, class: "btn btn-default" %>
<% else %>
<% end %>

<div class="row">
<div class="column-wrapper-own center-block">
		<div class="col-md-6">
			<h3>Upcoming events:</h3>
			<% @pending_events.each do |event| %>
			<p>
				<%= link_to event.name, event_path(event.id) %>
			</p>
			<% end %>
		</div>

		<div class="col-md-6">
			<h3>Past events:</h3>
			<% @past_events.each do |event| %>
			<p>
				<%= link_to event.name, event_path(event.id) %>
			</p>
			<% end %>
		</div>
	</div>
</div>