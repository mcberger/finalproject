<% @title = Users %>

<body class="content-wrapper">
<h1 class="post-title"> All users </h1>

<div class="row">
<div class="col-md-8 events-wrapper">
<ul>
	<% @users.each do |user| %>
		<% if user.admin == true %>
			<li> <%= you_user user %> <%= user_delete user  %> (admin)</li> 
		<% else %>
			<li> <%= you_user user %> <%= user_delete user %> </li>
		<% end %>
	<% end %>
</ul>
</div>

<div class="col-md-2">
<% if current_user.admin? %>
	<%= link_to "Add a new employee", add_new_users_path, class: "btn btn-default" %>
<% else %>
<% end %>
</div>
</div>
</body>

