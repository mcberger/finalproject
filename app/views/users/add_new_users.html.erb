<% if @user.errors.full_messages.any? %>
  <ul>
    <% @user.errors.full_messages.each do |error_message|%>
      <li> <%= error_message %> </li> <br>
    <% end %>
  </ul>
<% end %>


Fill in the details for the user you would like to create.

<%= form_for @user, url: create_new_users_path do |f| %> 
<div class="field">
	<%= f.label :fname, 'First name' %><br />
	<%= f.text_field :fname, autofocus: true %>
</div>

<div class="field">
	<%= f.label :lname, 'Last name' %><br />
	<%= f.text_field :lname %>
</div>

<div class="field">
	<%= f.label :function %><br />
	<%= f.text_field :function %>
</div>

<div class="field">
	<%= f.label :email %><br />
	<%= f.email_field :email %>
</div>

<div class="actions">
	<%= f.submit "Sign up" %>
</div>
<% end %>