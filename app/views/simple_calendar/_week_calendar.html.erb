<div class="simple-calendar">
<div class="row">
    <div class="col-md-2 calendar-header">
  <%= link_to "Previous", start_date: date_range.first - 1.day %>
  </div>
 <div class="col-md-8 calendar-header">
  <h3>Week <%= start_date.strftime("%U").to_i %></h3>
  </div>
    <div class="col-md-2 calendar-header">
  <%= link_to "Next", start_date: date_range.last + 1.day  %>
  </div>
</div>
  <table class="table table-striped">
    <thead>
      <tr>
        <% date_range.slice(0, 7).each do |day| %>
          <th><%= I18n.t("date.day_names")[day.wday] %></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% date_range.each_slice(7) do |week| %>
        <tr>
          <% week.each do |day| %>
            <%= content_tag :td, class: calendar.td_classes_for(day) do %>
               <% if defined?(Haml) && block_is_haml?(block) %>
                <% capture_haml do %>
                  <% block.call day, sorted_events.fetch(day, []) %> 
                <% end %>
              <% else %> 
                <% block.call day, sorted_events.fetch(day, []) %>
             <% end %> 
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
