<body class="content-wrapper">
<h1 class="post-title"> All questions </h1>

<div class="row">
	<div class="col-md-9">
		<ul>
			<% @posts.each do |post| %>
				<li class="list-group-item"> 
					<span class="badge"> <%= post.comments.length %></span>
					<%= link_to post.title, post_path(post) %>
				</li>
			<% end %>
		</ul>
	</div>

	<div class="col-md-3">
		<%= link_to "Ask a question", new_post_path, class: "btn btn-default" %>
	</div>

</div>
</body>