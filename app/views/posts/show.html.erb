Posted by: <%= @post.user.fname %>
<div class="panel panel-default">
	<div class="panel-heading">
		<h3 class="panel-title"><%= @post.title %></h3>
	</div>
	<div class="panel-body">
		<%= @post.body %>
		<%= @post.created_at.strftime("%m/%d/%Y at %I:%M") %>
	</div>
</div>


<div class="panel panel-default">
	<ul class="list-group">
		<% @post.comments.each do |comment| %>
		<li class="list-group-item"> <b><%= comment.user.fname %></b> 
			<%= comment.text %> <br>
			<%= comment.created_at.strftime("%m/%d/%Y at %I:%M") %><br>
			<% if current_user == @post.user || current_user.admin? %>
				<%= link_to 'Delete comment', post_comment_path(@post, comment), method: :delete %>
			<% else %>
			<% end %>
		</li>
		<% end %>
	</ul>
</div>

<br>

<br><br>
<% if current_user == @post.user || current_user.admin? %>
	<%= link_to 'Edit post', edit_post_path, class: "btn btn-default" %>
	<%= link_to 'Delete post', post_path(@post), method: :delete, class: "btn btn-default" %>
<% else %>
<% end %>
<%= link_to 'Comment', new_post_comment_path(@post), class: "btn btn-default" %>

